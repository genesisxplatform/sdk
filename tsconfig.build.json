{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "outDir": "./lib",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable"],
    "declaration": true
  },
  "include": [
    "./src/**.ts",
    "./src/**.tsx"
  ],
  "exclude": [
    "./src/**.test.ts",
    "./src/**.test.tsx"
  ]
}
